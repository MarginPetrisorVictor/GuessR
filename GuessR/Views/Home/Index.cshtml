@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <form method="post" asp-controller="Guess" asp-action="Game" enctype="multipart/form-data">
        <div>
            <button type="submit" class="button">Begin</button>
        </div>
        <div class="checkboxes-container">
            <div>
                <label><input type="checkbox" name="questionType" value="Song" checked /> Song</label>
                <label><input type="checkbox" name="questionType" value="Game" checked /> Game</label>
                <label><input type="checkbox" name="questionType" value="Movie" checked /> Movie</label>
                <label><input type="checkbox" name="questionType" value="Famous" checked /> Famous</label>
                <label><input type="checkbox" name="questionType" value="Other" checked /> Other</label>
            </div>
        </div>
    </form>
</div>


<style>

    a.btn.btn-primary:hover {
        text-decoration: none;
        color: #fff;
    }

    .checkboxes-container {
        position: absolute;
        bottom: 60px;
        right: 0;
    }

    .button {
        border: 0px !important;
        outline: 0 !important;
        width: 400px;
        height: 400px;
        border-radius: 50%;
        background-color: #e60000;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 30px;
        font-weight: bold;
        color: white;
        text-decoration: none;
        text-transform: uppercase;
        cursor: pointer;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
        margin: 0 auto;
    }

    .button:hover {
        transform: scale(1.1);
        box-shadow: 0 16px 32px rgba(0, 0, 0, 0.2);
        text-decoration: none;
        color: #fff;
    }

    .button:focus,
    .button:active {
        outline: none;
    }

</style>


